{{#> main}}
  <article>
    <h2>{{post.title}}</h2>
    <p>{{post.content}}</p>
    <p>Created by {{post.User.username}} on {{post.createdAt}}</p>
  </article>
  {{#if loggedIn}}
    <section>
      <h3>Leave a Comment</h3>
      <form action="/comment" method="POST">
        <input type="hidden" name="post_id" value="{{post.id}}">
        <label for="comment">Your Comment</label>
        <textarea id="comment" name="text" required></textarea>
        <button type="submit">Submit</button>
      </form>
    </section>
  {{/if}}
  {{#if comments.length}}
    <section>
      <h3>Comments</h3>
      {{#each comments}}
        <div>
          <p>{{text}}</p>
          <p>Comment by {{User.username}} on {{createdAt}}</p>
        </div>
      {{/each}}
    </section>
  {{/if}}
{{/main}}
